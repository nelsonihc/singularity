BootStrap: shub
From: nelsonihc/singularity:base

%environment
    export LANG=C.UTF-8
    export LC_ALL=C.UTF-8
    export PATH=/opt/conda/bin:$PATH

%post
    export LANG=C.UTF-8
    export LC_ALL=C.UTF-8
    export PATH=/opt/conda/bin:$PATH

    conda install -y pytorch-nightly cuda92 -c pytorch
    HOROVOD_GPU_ALLREDUCE=NCCL pip install --no-cache horovod
    pip install augmentor PyHamcrest pretrainedmodels PyYAML pycocotools tensorboard tensorboardX tqdm
